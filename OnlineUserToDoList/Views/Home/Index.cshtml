@{
    ViewBag.Title = "Home Page";
}

<h3>To Do List</h3>

<div class="row">
    <div>
        <section id="loginForm">
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="+" class="btn btn-primary" style="font-size: 20px;" onclick="addToDo()" />
                </div>
            </div>
        </section>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add To Do</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="todo-title" class="col-form-label">Title</label>
                            <input type="text" class="form-control" id="todo-title">
                        </div>
                        <div class="form-group">
                            <label for="todo-date" class="col-form-label">Date</label>
                            <input class="form-control" id="todo-date" type="date" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="saveToDo()">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <table id="myTable" class="display" style="width:100%">
        <thead>
        <tr>
            <th style="display: none;">Id</th>
            <th>RecordNumber</th>
            <th>Title</th>
            <th>Due Date</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        bindDatatable();
    });

    function addToDo() {
        $('#myModal').modal();
    }

    function clearModal() {
        $("#todo-title").val(null);
        $("#todo-date").val(null);
        $('#myModal').modal('hide');
    }

    function saveToDo() {
        var title = $("#todo-title").val();
        var date = $("#todo-date").val();
        var parsedJson = JSON.stringify({ Title: title, DueDate: date });

        $.ajax({
            type: "POST",
            url: "/ToDo/Create",
            contentType: "application/json; charset=utf-8",
            data: parsedJson,
            datatype: "json",
            success: function () {
                swal({
                    title: "Done",
                    text: "To do has been added",
                    icon: "success",
                    button: "Ok!"
                }).then(() => {
                    location.reload();
                });
                clearModal();
            },
            error: function () {
                swal({
                    title: "Error",
                    text: "Failed to save ToDo",
                    icon: "error",
                    button: "Ok!"
                }).then(() => {
                    location.reload();
                });
                clearModal();
            }
        });
    }

    function bindDatatable() {
        datatable = $('#myTable')
            .DataTable({
                bServerSide: true,
                processing: true,
                ajax: "/ToDo/GetToDos",
                columns: [
                    {
                        data: "RecordNumber",
                    },
                    {
                        data: "Title"
                    },
                    {
                        data: "DueDate",
                        render: function (data) {
                            var start = data.indexOf('(') + 1;
                            var end = data.indexOf(')');
                            var parsedDate = new Date(Date(data.substring(start, end)));
                            return parsedDate.toUTCString();
                        }
                    },
                    {
                        data: "Action",
                        render: function (data, type, row) {
                            return '<button class="edit btn btn-primary"> Edit </button> <button class="delete btn btn-danger"> Delete </button> <button class="done btn btn-success"> <span class="glyphicon glyphicon-ok"></span> </button>';
                        }
                    },
                    {
                        data: "Id",
                        render: function() {
                            return '';
                        }
                    }
                ]
            });
    }

    $('#myTable .edit').on('click',
        function () {
            console.log("Edit");
        });
    $('#myTable .delete').on('click',
        function () {
            console.log("Delete");
        });
    $('#myTable .done').on('click',
        function () {
            console.log("Done");
        });
</script>