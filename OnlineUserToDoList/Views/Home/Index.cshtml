@model IEnumerable<OnlineUserToDoList.Models.ToDoModel>

@{
    ViewBag.Title = "Home Page";
}

<h3>To Do List</h3>

<div class="row">
    <div>
        <section id="loginForm">
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="+" class="btn btn-primary" style="font-size: 20px;" onclick="addToDo()" />
                </div>
            </div>
        </section>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add To Do</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="todo-title" class="col-form-label">Title</label>
                            <input type="text" class="form-control" id="todo-title">
                        </div>
                        <div class="form-group">
                            <label for="todo-date" class="col-form-label">Date</label>
                            <input class="form-control" id="todo-date" type="datetime-local" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="saveToDo()">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <table id="myTable" class="table table-hover table-striped">
        <thead>
            <tr>
                <th>RecordNumber</th>
                <th>Title</th>
                <th>Due Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecordNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td>
                        <button class="btn btn-primary">Edit</button>
                        <button class="btn btn-danger">Delete</button>
                        <button class="btn btn-success">
                            <span class="glyphicon glyphicon-ok"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {  
        bindDatatable();  
    });

    function addToDo() {
        $('#myModal').modal();
    }

    function clearModal() {
        $("#todo-title").val(null);
        $("#todo-date").val(null);
        $('#myModal').modal('hide');
    }

    function saveToDo() {
        var title = $("#todo-title").val();
        var date = $("#todo-date").val();
        var parsedJson = JSON.stringify({ Title: title, DueDate: date });

        $.ajax({  
            type: "POST",  
            url: "/ToDo/Create",  
            contentType: "application/json; charset=utf-8",  
            data: parsedJson,  
            datatype: "json",  
            success: function () {  
                swal({
                    title: "Done",
                    text: "To do has been added",
                    icon: "success",
                    button: "Ok!"
                });
                clearModal();
            },  
            error: function () {  
                swal({
                    title: "Error",
                    text: "Failed to save ToDo",
                    icon: "error",
                    button: "Ok!"
                });
                clearModal();
            }  
        });
    }

    function bindDatatable() {  
        datatable = $('#myTable')  
            .DataTable({  
                "sAjaxSource": "/ToDo/GetToDos",  
                "bServerSide": true,  
                "bProcessing": true,  
                "bSearchable": true,  
                "order": [[1, 'asc']],  
                "language": {  
                    "emptyTable": "No record found.",  
                    "processing":  
                        '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '  
                },  
                "columns": [  
                    {  
                        "data": "RecordNumber",  
                        "autoWidth": true,  
                        "searchable": true  
                    },  
                    {  
                        "data": "Title",  
                        "autoWidth": true,  
                        "searchable": true  
                    },  
                    {  
                        "data": "DueDate",  
                        "autoWidth": true,  
                        "searchable": true  
                    }
                ]  
            });  
    }  
</script>